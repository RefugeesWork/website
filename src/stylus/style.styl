/* ---------------------------------------------------------------------------------------------------------
TICKER
--------------------------------------------------------------------------------------------------------- */

.ticker-wrapper 
	line-height  40px
	color  #ccc
	overflow hidden

.visible 
	font-size 2em
	font-family $read_font
	font-weight 800
	overflow hidden
	height 50px

.visible p 
	display inline
	float left
	margin 0

.ticker 
	margin-top 7px
	padding-left 13px
	text-align left
	list-style none
	animation 18s linear 0s normal none infinite change

.ticker li 
	display block
	color #fff
	line-height 50px
	margin 0

@keyframes change 
  0%, 12%, 100% 
  	transform translateY(0)
  17%, 29% 
  	transform translateY(-25%)
  34%, 46% 
  	transform translateY(-50%)
  51%, 63% 
  	transform translateY(-75%)
  68%, 80% 
  	transform translateY(-50%)
  85%, 97% 
  	transform translateY(-25%)





