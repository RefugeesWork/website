/* ---------------------------------------------------------------------------------------------------------
ARROW DOWN
--------------------------------------------------------------------------------------------------------- */

@keyframes scrolldown3 
  0% 
    bottom 50px
    opacity 1 

  70% 
    bottom 100px
    opacity 0.2 

  100% 
    bottom 50px
    opacity 1  

.scrolldown3 
  -webkit-animation scrolldown3 2s infinite
  animation scrolldown3 2s infinite
  max-width 64px
  max-height 36px
  position absolute
  left calc(50% - 32px)

.scrolldown3 path 
  stroke #fff
  fill transparent
  stroke-width 3px 


